#include<stdio.h>
#include<stdlib.h>
#include<time.h>

int main()
{
  int num[2], value = 0;
  srand(time(NULL));
  
  for(int i = 0; i < 2; i++)
    {
      num[i] = rand() % 6 + 1;
      value += num[i];
    }

  printf("Rolling dice. . .\nDie 1: %d\nDie 2: %d\nTotal value: %d\n",num[0],num[1],value);
  
  return 0;
}
